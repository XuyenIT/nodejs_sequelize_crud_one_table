<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bootstrap 5 Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <%- include('../layout/header'); %>
        <div class="container mt-5">
            <div class="row">
                <div class="col-sm-12">
                    <h3>List Product</h3>
                    <% if(listProduct !="" ){%>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                    <th>Image</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% listProduct.forEach((item,index)=>{%>
                                    <tr>
                                        <td>
                                            <%=item.productName%>
                                        </td>
                                        <td>
                                            <%=item.price%>
                                        </td>
                                        <td><img src="<%=item.image%>" width="100" class="img-thumbnail" /></td>
                                        <td class="text-center">
                                            <a class="btn btn-primary" href="/product/detail/<%=item.id%>">Detail</a>
                                            <a class="btn btn-warning" href="/product/update/<%=item.id%>">Update</a>
                                            <a class="btn btn-danger" href="/product/delete/<%=item.id%>">Delete</a>
                                        </td>

                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                        <%}%>

                </div>
            </div>
        </div>
        <%- include('../layout/footer'); %>
</body>

</html>